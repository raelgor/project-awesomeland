doctype html
html(lang="en",	ng-app="app")
	head
		title Kingdoms of the Shattered Lands
		meta(content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0",   name="viewport")
		link(rel="stylesheet", href="/source/styles.css")
		link(href="https://fonts.googleapis.com/css?family=Open+Sans:700,400&subset=latin,greek-ext,greek",	rel="stylesheet",	type="text/css")
		link(href="https://fonts.googleapis.com/css?family=Amatic+SC:700",	rel="stylesheet",	type="text/css")
		link(rel="stylesheet",	href="https://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.css")
		link(rel="stylesheet",	href="https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic")
		script(src="https://crypto-js.googlecode.com/svn/tags/3.0.2/build/rollups/md5.js")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular-route.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular-animate.min.js")
		script(src="/source/app.js")
		link(rel="shortcut icon",	href="images/favicon.png")
	body(ng-view, ng-controller="main")
		#fb-root
		#version=version
		.unborn.ani04#viewport
			a.unborn.ani04#logo-box(href="/")
			#wrapper
				#side-box
					.unborn.ani04#fblogin(ng-click="fw.fbLogin()", alt=text.LOGIN)
						span=text.LOGIN	
					.unborn.ani04#fbregister(ng-click="fw.fbLogin()")
						span=text.REGISTER
					.unborn.ani04#google
					.unborn.ani04#appstore
				#main-box
					#main-nav
						.tab#home-tab=text.HOME
						.disabled.tab#gameplay-tab=text.GAMEPLAY
						.disabled.tab#races-tab=text.RACES
						.disabled.tab#news-tab=text.NEWS
					.home-title=text.HOME_TITLE
					.home-welcome-text=text.HOME_WELCOME_TEXT
					form(action="https://www.paypal.com/cgi-bin/webscr", method="post", target="_blank")
						input(type="hidden", name="cmd", value="_s-xclick")
						input(type="hidden" name="hosted_button_id", value="HEPHDTB6KLEP4")
						input(type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif", border="0", name="submit", alt="PayPal - The safer, easier way to pay online!")
						img(alt="", border="0", src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif", width="1", height="1")
				